@model Fruit

<h1 class="page-title">Add Fruit</h1>

@*<form method="post" action="/Home/AddFruit">*@
<form method="post" asp-controller="Home" asp-action="AddFruit">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Qty">Qty</label>
        <input type="text" asp-for="Qty" class="form-control" />
    </div>
    <button class="btn btn-primary">Add</button>
    <a asp-controller="Home" asp-action="Index">Cancel</a>
</form>
