@model CRUD.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            FirstName
        </dt>
        <dd>
            @Model.FirstName
        </dd>
        <dt>
            LastName
        </dt>
        <dd>
            @Model.LastName
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Model.Email
        </dd>
        <dt>
            Age
        </dt>
        <dd>
            @Model.Age
        </dd>
        <dt>
           Subscribed
        </dt>
        <dd>
            <input type="checkbox" asp-for="Subscribed" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
